<?xml version="1.0" encoding="utf-8" ?>
<robot>
  <setup>
  	<parsertype>Python</parsertype>
    <extension>.py</extension>
	    <globalvariables>
	      <e name="rospy" type="import"/>
	      <e name="time import sleep as _sleep" type="from"/>
	      <e name="gazebo_msgs.srv import *" type="from"/>
	    </globalvariables>
	    <method>
			<setup parameters="" return="void">
			rospy.init_node('my_robot_2', anonymous=True)
			rospy.wait_for_service('/gazebo/apply_joint_effort')
			
			global req
			req = ApplyJointEffortRequest()
			req.start_time.secs = 0
			req.duration.secs = 1
			
			global service_func
			service_func = rospy.ServiceProxy('/gazebo/apply_joint_effort', ApplyJointEffort)
			</setup>
		</method>
  </setup>
  <metamethods>
		<MoveForward parameter="int time" return="void">moveForward(time)</MoveForward>
		<MoveBackward parameter="int time" return="void">moveBackward(time)</MoveBackward>
		<TurnRight parameter="int degrees" return="void">turnRight(degrees)</TurnRight>
		<TurnLeft parameter="int degrees" return="void">turnLeft(degrees)</TurnLeft>
		<Idle parameter="int time" return="void">idle(time)</Idle>
		<CloseGripper parameter="" return="void">closeGripper()</CloseGripper>
		<OpenGripper parameter="" return="void">openGripper()</OpenGripper>
		<RiseGripper parameter="" return="void">riseGripper()</RiseGripper>
  </metamethods>
</robot>
