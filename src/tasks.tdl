compositeTask Play_Ball(lat,lng):                  
              
	task defend_goal():
		goTo(lat,lng):
		locateGoal():
		moveToGoal():
		faceBall(id=1):
		
	task shot_ball():
		goTo(lat,lng):
		LocateBall():
		moveToBall():
		aim():
		kickBall(after(1)): 
		
		
